<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane
        styleClass="dialog-overlay"
        stylesheets="@./css/item-modal.css"
        xmlns="http://javafx.com/javafx/23.0.1"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="com.gnome.gnome.shop.controllers.ItemController"
>

    <VBox alignment="TOP_CENTER" spacing="20" styleClass="purchase-dialog">
        <HBox alignment="CENTER" prefHeight="336.0" prefWidth="560.0" spacing="40" styleClass="dialog-content">
            <VBox alignment="CENTER" spacing="10">
                <ImageView fx:id="itemIcon" styleClass="item-icon" />
                <Label fx:id="itemPrice" styleClass="item-price" text="300 coins" />
            </VBox>
            <VBox alignment="TOP_LEFT" spacing="8" styleClass="detail-box">
                <Label fx:id="itemTitle" styleClass="item-title" text="Goblin armour" />
                <Label fx:id="itemValue" styleClass="item-value" text="Value: +150 health" />
                <Label fx:id="itemDetails" styleClass="item-details" text="Details: Crafted by cunning goblins from scavenged scraps and enchanted leather.\nItâ€™s rough, reliable, and full of chaotic charm.\nOptional: with a 5% chance of falling from a goblin." wrapText="true" />
            </VBox>
        </HBox>

        <HBox alignment="BASELINE_RIGHT" spacing="30" styleClass="dialog-buttons">
            <Button fx:id="cancelButton" styleClass="button-cancel" text="Cancel" />
            <Button fx:id="buyButton" styleClass="button-buy" text="Buys" />
        </HBox>
    </VBox>

</StackPane>
