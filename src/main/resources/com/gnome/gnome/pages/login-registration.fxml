<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane fx:id="loginRegistretion" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            styleClass="login-registration-page"
            stylesheets="@./css/login-registration.css"
            fx:controller="com.gnome.gnome.loginRegistration.controller.LoginRegistrationController">

    <top>
<!--        <Label text="Login and Registration" styleClass="top-label" style="-fx-padding: 10; -fx-alignment: center;"/>-->
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
            <Label text="Login and Registration" styleClass="top-label"/>
            <fx:define>
                <ToggleGroup fx:id="authToggleGroup"/>
            </fx:define>
            <HBox alignment="CENTER" spacing="20">
                <RadioButton fx:id="loginRadio" text="Login" toggleGroup="$authToggleGroup" onAction="#switchToLogin" styleClass="radio-button"/>
                <RadioButton fx:id="registerRadio" text="Register" toggleGroup="$authToggleGroup" onAction="#switchToRegister" styleClass="radio-button"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <StackPane>
                <VBox fx:id="loginPane" alignment="CENTER" spacing="20" style="-fx-padding: 20">
                    <Label text="Login to System"  styleClass="section-label"/>
                    <TextField fx:id="loginUsername" promptText="Username" styleClass="input-field" maxWidth="350.0" text="artem_test_4"/>
                    <PasswordField fx:id="loginPassword" promptText="Password" styleClass="input-field" maxWidth="350.0" text="Artem_test_4_4"/>
                    <HBox alignment="CENTER" maxWidth="400" spacing="10">
                        <Button fx:id="loginButton" styleClass="action-button" text="Login" onAction="#handleLogin" prefWidth="180"/>
                        <Button fx:id="exitButton" styleClass="action-button" text="Exit" onAction="#onExitButtonClick" prefWidth="180"/>
                    </HBox>

                    <Label fx:id="loginMessage" styleClass="message-label" text=""  wrapText="true" />
                </VBox>

                <VBox fx:id="registerPane" alignment="CENTER" spacing="20" style="-fx-padding: 20">
                    <Label text="Create an Account" styleClass="section-label"/>
                    <TextField fx:id="registerUsername" promptText="Username" styleClass="input-field" maxWidth="350.0"/>
                    <PasswordField fx:id="registerPassword" promptText="Password" styleClass="input-field" maxWidth="350.0"/>
                    <PasswordField fx:id="registerConfirmPassword" promptText="Confirm Password" styleClass="input-field" maxWidth="350.0"/>
                    <Button fx:id="registerButton" styleClass="action-button" text="Register" onAction="#handleRegister" prefWidth="180"/>
                    <Label fx:id="registerMessage" styleClass="message-label" wrapText="true"/>
                </VBox>

        </StackPane>
    </center>

</BorderPane>
