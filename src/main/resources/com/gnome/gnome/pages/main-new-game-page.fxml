<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<BorderPane
        prefHeight="600"
        prefWidth="800"
        styleClass="root-pane"
        xmlns="http://javafx.com/javafx/17.0.2-ea"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.gnome.gnome.newNewGame.NewNewGameController"
        stylesheets="@./css/new_game.css"
>

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="top-bar">
            <Button fx:id="backButton" styleClass="top-button" text="Back"/>
        </HBox>
    </top>

    <center>
        <StackPane>
            <VBox alignment="CENTER" maxWidth="400" spacing="20">
                <Label styleClass="menu-title" text="New Game" />

                <Button fx:id="storyModeButton" styleClass="menu-button" text="Story Mode" maxWidth="Infinity"/>
                <Button fx:id="otherModeButton" styleClass="menu-button" text="Other Mode" maxWidth="Infinity"/>
            </VBox>
        </StackPane>
    </center>

    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>
</BorderPane>
