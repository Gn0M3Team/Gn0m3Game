<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:id="newGamePage"
            styleClass="root-pane"
            fx:controller="com.gnome.gnome.newGame.NewGameController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20">
            <Label text="New Game"  styleClass="menu-title"/>

            <HBox alignment="CENTER" maxWidth="600" spacing="10">
                <Button fx:id="ShopPopUpButton" styleClass="menu-button" text="Shop Popup" onAction="#onShopPopUpButtonClick" prefWidth="180"/>
                <Button fx:id="popupButton" styleClass="menu-button" text="Pause" prefWidth="180"/>
                <Button fx:id="mainMenuButton" styleClass="menu-button" text="Mein Menu" onAction="#onMeinMenuButtonClick"  prefWidth="180"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <Label text="Here is new game"  styleClass="menu-title"/>
    </center>



</BorderPane>
