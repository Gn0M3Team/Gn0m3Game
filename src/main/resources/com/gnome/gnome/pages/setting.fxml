<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="settingPage" prefHeight="400.0" prefWidth="600.0" styleClass="root-pane" stylesheets="@./css/setting.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gnome.gnome.setting.SettingController">

    <top>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20">
            <Label styleClass="menu-title" text="Setting" />

            <HBox alignment="CENTER" maxWidth="500" spacing="10">
                <Button fx:id="backGameButton" onAction="#backToGameButtonClick" prefWidth="230" styleClass="menu-button" text="back to game" />
                <Button fx:id="mainMenuButton" onAction="#mainMenuButtonClick" prefWidth="230" styleClass="menu-button" text="mein menu" />
            </HBox>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label styleClass="menu-title" text="Here is Setting:" />
            <Label styleClass="center-button" text="1. Setting" />
            <Label styleClass="center-button" text="2. Setting" />
        </VBox>
    </center>



</BorderPane>
